<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewNoteActivity">

    <include
        layout="@layout/toolbar_main"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/new_note_padding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/newNoteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/new_note_title"
                android:textSize="24sp"
                android:background="@null"/>

            <Button
                android:id="@+id/bAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_note_save"
                android:background="@color/colorPrimary"
                android:textColor="@color/BrightWhiteColor"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/newNoteBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_note_body"
            android:textSize="20sp"
            android:background="@null"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</LinearLayout>